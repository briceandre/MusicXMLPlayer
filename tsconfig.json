{
  "compilerOptions": {
    "target": "es2017",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}